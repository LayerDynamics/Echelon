{
  "name": "@echelon/framework",
  "version": "0.1.0",
  "exports": "./framework/mod.ts",

  "tasks": {
    "dev": "deno run --watch -A main.ts",
    "dev:otel": "OTEL_DENO=true OTEL_SERVICE_NAME=echelon deno run --watch -A main.ts",
    "start": "deno run --allow-net --allow-read --allow-env main.ts",
    "start:otel": "OTEL_DENO=true OTEL_SERVICE_NAME=echelon deno run --allow-net --allow-read --allow-env main.ts",
    "test": "deno test --allow-all",
    "check": "deno check main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },

  "imports": {
    "@/": "./src/",
    "@echelon/": "./framework/",
    "@wasm/": "./wasm_modules/",
    "std/": "https://deno.land/std@0.220.0/",
    "@opentelemetry/api": "npm:@opentelemetry/api@1"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.unstable"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },

  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["no-explicit-any"]
    }
  },

  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  },

  "lock": true,
  "nodeModulesDir": "none",

  "unstable": ["kv", "cron"]
}
